---
layout: default
---
<div class="post">
  <header class="post-header d-flex align-items-center">
    {% if site.icon_enabled %}
      <img
        src="{{ site.icon | prepend: '/assets/img/' | relative_url}}"
        alt="{{ site.name }} {{ site.type }}"
        class="mr-2 align-self-start"
        style="height: 72px;"
      >
    {% endif %}
    <div>
      <h1 class="post-title mb-0">
        {{ site.name }}
        {{ site.type }}
      </h1>
      <p class="desc" style="margin-bottom: 0;">{{ page.subtitle }}</p>
    </div>
  </header>

  <hr>

  <article>
    <div class="container">
      <div class="row">
        <!-- Content Section -->
        <div class="col-md-6 order-md-1 order-2">
          <div class="clearfix">{{ content }}</div>
        </div>

        <!-- Carousel Section -->
        <div class="col-md-6 order-md-2 order-1">
          <div class="card" style="overflow: hidden;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
              <!-- 轮播（Carousel）指标 -->
              <ol class="carousel-indicators">
                {% for item in site.data.carousel %}
                  <li
                    data-target="#myCarousel"
                    data-slide-to="{{ forloop.index0 }}"
                    {% if forloop.first %}
                      class="active"
                    {% endif %}
                  ></li>
                {% endfor %}
              </ol>

              <!-- 轮播（Carousel）项目 -->
              <div class="carousel-inner">
                {% for item in site.data.carousel %}
                  <div class="carousel-item {% if forloop.first %}active{% endif %}">
                    <div class="carousel-wrapper">
                      <img
                        src="{{ item.image | prepend: '/assets/img/carousel/' | relative_url }}"
                        class="d-block w-100 carousel-image"
                        alt="{{ item.caption }}"
                      >
                    </div>
                  </div>
                {% endfor %}
              </div>

              <!-- 轮播（Carousel）导航 -->
              <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="spacer"></div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit"><h2>Latest News</h2></a>
      </h2>
      {% include news.liquid limit=true %}
      <a href="{{ '/news/' | relative_url }}">View All &rarr;</a>
    {% endif %}

    <div class="spacer"></div>

    <!-- Latest posts -->
    {% if site.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit"><h2>Latest Posts</h2></a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}
  </article>
</div>

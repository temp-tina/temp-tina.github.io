---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header" style="text-align: center;">
    <h1 class="post-title">{{ page.title | capitalize }}</h1>
    {% comment %} author（逗号隔开） + time {% endcomment %}
    <p class="post-author">{{ page.author | join: ', ' }} | {{ page.date | date: '%Y-%m-%d' }}</p>
    <hr>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>

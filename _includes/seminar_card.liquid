<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
      <div class="row no-gutters">
        <div class="col-md-12">
          <div class="card-body">
            <h5 class="card-title seminar-title">
              <a href="{{ seminar.pdf_link }}" target="_blank" style="color: inherit; text-decoration: none;">
                {{ seminar.title }}
              </a>
            </h5>
            <p class="card-text seminar-presenter">
              <small class="text-muted">
                {% for presenter in seminar.presenter %}
                  {{ presenter -}}
                  {%- if forloop.last == false %}, {% endif %}
                {% endfor %}
              </small>
            </p>
            <p class="card-text seminar-date">
              <small class="text-muted">{{ seminar.date | date: "%B %d, %Y" }}</small>
            </p>
            <p class="card-text">{{ seminar.tldr }}</p>
            <a href="{{ seminar.pdf_link }}" target="_blank" class="btn btn-primary seminar-btn">View PDF</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 